# Environment Variables for LegitEvents
# Copy this file to .env and fill in your actual values

# Database
MONGODB_URI=mongodb://localhost:27017/legitevents

# JWT Secret
JWT_SECRET=your_jwt_secret_here

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Email Configuration
# SendGrid (Recommended for production)
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=LegitEvents <your-verified-email@yourdomain.com>

# Gmail (Alternative for development)
# EMAIL_USER=your-gmail@gmail.com
# EMAIL_PASS=your-gmail-app-password

# M-Pesa Configuration
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_PASSKEY=your_mpesa_passkey
MPESA_SHORTCODE=your_mpesa_shortcode
MPESA_CALLBACK_URL=http://localhost:5000/api/payments/mpesa/callback

# Server Configuration
PORT=5000
NODE_ENV=development